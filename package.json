{
  "name": "vscode-corriger-extension",
  "displayName": "vscode-corriger-extension",
  "description": "Correction automatique d'exercices LaTeX",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:latex",
    "onCommand:vscode-corriger-extension.detectExercises"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-corriger-extension.detectExercises",
        "title": "Détecter les exercices LaTeX"
      },
      {
        "command": "vscode-corriger-extension.generateCorrection",
        "title": "Générer une correction pour l'exercice sélectionné"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-corriger-extension.generateCorrection",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "editorTextFocus && resourceExtname == .tex"
      }
    ],
    "configuration": {
      "title": "VSCode Corriger Extension",
      "properties": {
        "vscode-corriger-extension.copilotTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout en millisecondes pour les appels à Copilot"
        },
        "vscode-corriger-extension.rateLimitRequests": {
          "type": "number",
          "default": 10,
          "description": "Nombre maximum de requêtes Copilot par minute"
        },
        "vscode-corriger-extension.enableCache": {
          "type": "boolean",
          "default": true,
          "description": "Activer le cache des exercices parsés"
        },
        "vscode-corriger-extension.maxCacheSize": {
          "type": "number",
          "default": 10,
          "description": "Taille maximale du cache des exercices"
        },
        "vscode-corriger-extension.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Activer le mode debug pour les logs détaillés"
        },
        "vscode-corriger-extension.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug"
          ],
          "default": "info",
          "description": "Niveau de verbosité des logs"
        },
        "vscode-corriger-extension.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Clé API OpenAI pour la génération de corrections"
        },
        "vscode-corriger-extension.openaiModel": {
          "type": "string",
          "enum": [
            "gpt-5.2",
            "gpt-5.2-pro",
            "gpt-5.1",
            "gpt-5",
            "gpt-5-mini",
            "gpt-5-nano",
            "gpt-4.1",
            "gpt-4o",
            "gpt-4o-mini",
            "gpt-4-turbo",
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "default": "gpt-5-mini",
          "description": "Modèle OpenAI à utiliser pour la génération de corrections"
        },
        "vscode-corriger-extension.openaiTimeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout en millisecondes pour les appels à OpenAI"
        },
        "vscode-corriger-extension.enableCorrectionCache": {
          "type": "boolean",
          "default": true,
          "description": "Activer le cache des corrections générées"
        },
        "vscode-corriger-extension.correctionCacheSize": {
          "type": "number",
          "default": 50,
          "description": "Taille maximale du cache des corrections"
        },
        "vscode-corriger-extension.aiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "copilot"
          ],
          "default": "openai",
          "description": "Fournisseur d'IA à utiliser pour la génération de corrections (Copilot est plus sécurisé car il n'utilise pas de clé API externe)"
        },
        "vscode-corriger-extension.copilotModel": {
          "type": "string",
          "enum": [
            "gpt-5.2",
            "gpt-5.1",
            "gpt-5",
            "gpt-4.1",
            "gpt-4o",
            "gpt-4-turbo",
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "default": "gpt-5.2",
          "description": "Famille de modèle Copilot à privilégier pour la génération de corrections"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "vscode-test --label unit",
    "test:e2e": "vscode-test --label e2e",
    "test:integration": "playwright test",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "sinon": "^21.0.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "openai": "^6.16.0"
  }
}