{
  "name": "corriger-latex",
  "displayName": "Correcteur LaTeX",
  "description": "Agent de correction d'exercices LaTeX pour Copilot Chat",
  "version": "0.0.3",
  "publisher": "philippe",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "AI",
    "Chat"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:latex",
    "onCommand:corriger-latex.corrigerDocument"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "corriger-latex.corrigerDocument",
        "title": "Corriger le document LaTeX",
        "category": "LaTeX"
      }
    ],
    "chatParticipants": [
      {
        "id": "corriger-latex.corriger",
        "name": "corriger",
        "description": "Agent de correction d'exercices LaTeX de niveau lyc√©e",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && node esbuild.js --production",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "esbuild": "^0.21.5",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.4.5"
  }
}